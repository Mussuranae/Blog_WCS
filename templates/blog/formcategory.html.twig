{% extends 'base.html.twig' %}

{% block body %}

    <h1>All categories : </h1>

        <div>
            <ul>
            {% for category in categories %}
                <li>
                    <a href="{{ path('show_category', { 'name':category.name}) }}">{{ category.name }}</a>
                </li>
            {% endfor %}
            </ul>
        </div>


    <h1>Add a category</h1>
    {{ form_start(form) }}
        {{ form_row(form.name) }}
        <button class="btn">{{ button_label|default('Submit') }}</button>
    {{ form_end(form) }}

    <a href="{{ path('app_index') }}">
        Back to homepage.
    </a>

{% endblock %}